<p id="notice"><%= notice %></p>

<h1>All Posts</h1>

    <% @posts.each do |post| %>
      <div class="listed_posts">
        <h4><%= post.title %></h4>
        <p><%= post.body %></p>
        <div class="card-action">
        <p><%= link_to 'Show', post %> |
        <%= link_to 'Edit', edit_post_path(post) %> |
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></p>	
        </div>
      </div>
    <% end %>

<%= link_to 'New Post', new_post_path %>